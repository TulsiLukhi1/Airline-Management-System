@model AirlineManagementSystem.Models.FlightDetailsModel
@using Microsoft.AspNetCore.Http;
    
    @{
        ViewData["Title"] = "Search";
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }



    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Book Flight</h4>
                            <p class="card-description">

                            </p>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.ResFrom)</th>
                                            <th>@Html.DisplayNameFor(model => model.ResTo)</th>
                                            <th>@Html.DisplayNameFor(model => model.ResDepDate)</th>
                                            <th>@Html.DisplayNameFor(model => model.ResTime)</th>
                                            <th>@Html.DisplayNameFor(model => model.PlaneSeat)</th>
                                            <th>@Html.DisplayNameFor(model => model.ResTicketPrice)</th>
                                            <th>@Html.DisplayNameFor(model => model.ResPlaneType)</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @*@foreach (var item in @ViewBag.ss)*@

                                        <tr>
                                            <td>
                                                @ViewBag.ss.ResFrom
                                            </td>
                                            <td>
                                                @ViewBag.ss.ResTo
                                            </td>
                                            <td>
                                                @ViewBag.ss.ResDepDate
                                            </td>
                                            <td>
                                                @ViewBag.ss.ResTime
                                            </td>
                                            <td>
                                                @ViewBag.ss.PlaneSeat
                                            </td>
                                            <td>
                                                @ViewBag.ss.ResTicketPrice
                                            </td>
                                            <td>
                                                @ViewBag.ss.ResPlaneType
                                            </td>
                                        </tr>

                                        <tr>
                                        </tr>

                                    </tbody>


                                </table>
                                <div style="margin:20px">

                                </div>
                                <form asp-action="BookingFlight" asp-controller="FlightBooking">
                                    <input type="hidden" value="@ViewBag.ss.ResID" name="id" />

                                    @*<input type="hidden" asp-for="ResID" value="" name="fid" />*@
                                    <input type="submit" value="Book Flight" class="btn btn-primary" />

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


