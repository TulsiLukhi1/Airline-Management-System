@model IEnumerable<AirlineManagementSystem.Models.AeroPlaneModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-10 grid-margin stretch-card" style="margin:37px">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Aeroplane Details</h4>
                        <p class="card-description">

                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        @*<th>@Html.DisplayNameFor(model => model.PlaneId)</th>*@
                                        <th>@Html.DisplayNameFor(model => model.APlaneName)</th>
                                        <th>@Html.DisplayNameFor(model => model.SeatingCapacity)</th>
                                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.APlaneName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SeatingCapacity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.PlaneId">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.PlaneId">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.PlaneId">Delete</a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
